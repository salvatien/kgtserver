@{
    ViewBag.Title = "AddEvent";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Dogs.ViewModels.Data.Models.EventModel


<div style="margin:60px">

    @using (Html.BeginForm("AddEvent", "Events", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)
        @Html.HiddenFor(m => m.EventId)
    <div style="float:left">
        <div class="form-group">
            @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label form-field" })
            <div class="col-md-10  form-field">
                @Html.TextBoxFor(m => m.Title, new { @id = "title",  @class = "form-control" })
            </div>
            <div id="titleValidationInfo" class="formValidation">
                To pole musi być uzupełnione.
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Date, new { @class = "col-md-2 control-label form-field" })
            <div class="col-md-10  form-field">
                @Html.TextBoxFor(m => m.Date, new { @id= "date", @type = "date", @class = "form-control" })
            </div>
            <div id="dateValidationInfo" class="formValidation">
                To pole musi być uzupełnione.
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label form-field" })
            <div class="col-md-10 form-field">
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.City, new { @class = "col-md-2 control-label form-field" })
            <div class="col-md-10 form-field">
                @Html.TextAreaFor(m => m.City, new {@id = "city",  @class = "form-control" })
            </div>
            <div id="cityValidationInfo" class="formValidation">
                To pole musi być uzupełnione.
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.StreetOrLocation, new { @class = "col-md-2 control-label form-field" })
            <div class="col-md-10 form-field">
                @Html.TextAreaFor(m => m.StreetOrLocation, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Notes, new { @class = "col-md-2 control-label form-field" })
            <div class="col-md-10 form-field">
                @Html.TextAreaFor(m => m.Notes, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.CheckBoxFor(m => m.IsCommercialTraining@*, new { @class = "form-control" }*@)

            @Html.LabelFor(m => m.IsCommercialTraining, new { @class = "col-md-2 control-label form-field" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default form-field" value="Prześlij dane" onclick="return validateAddEvent()"/>
            </div>
        </div>


    </div>
    }
</div>
<script>
    function validateAddEvent() {
        if ($('#title').val() == "" || $('#date').val() == "" || $('#city').val() == "") {
            if ($('#title').val() == "")
                document.getElementById("titleValidationInfo").style.display = "block";
            else
                document.getElementById("titleValidationInfo").style.display = "none";

            if ($('#date').val() == "")
                document.getElementById("dateValidationInfo").style.display = "block";
            else
                document.getElementById("dateValidationInfo").style.display = "none";

            if ($('#city').val() == "")
                document.getElementById("cityValidationInfo").style.display = "block";
            else
                document.getElementById("cityValidationInfo").style.display = "none";

            return false;
        }
    }
</script>