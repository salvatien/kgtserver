@using kgtwebClient.Helpers;
@{
    ViewBag.Title = "AddDogCertificate";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var remaininCertificates = CertificateHelper.GetAllCertificatesExceptOneDog(Model.DogId);
}

@model Dogs.ViewModels.Data.Models.DogCertificateModel


<div style="margin:60px">

    @using (Html.BeginForm("AddDogCertificate", "DogCertificates", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)
        @Html.HiddenFor(m => m.DogId)
        <div style="float:left">
            <div class="form-group">
                @Html.LabelFor(m => m.CertificateId, new { @class = "col-md-2 control-label form-field" })
                <div class="col-md-10  form-field">
                    @Html.DropDownListFor(m => m.CertificateId, remaininCertificates, new { @class = "form-control" })
                    @*@Html.TextBoxFor(m => m.CertificateId, new { @class = "form-control" })*@
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(m => m.AcquiredOn, new { @class = "col-md-2 control-label form-field" })
                <div class="col-md-10 form-field">
                    @Html.TextBoxFor(m => m.AcquiredOn, new { @type = "date", @class = "form-control" })
                </div>
            </div>
           

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default form-field" value="Prześlij dane" />
                </div>
            </div>
        </div>
    }
</div>

