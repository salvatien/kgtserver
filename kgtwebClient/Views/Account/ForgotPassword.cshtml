
@using Dogs.ViewModels.Data.Models.Account;
@model LoginModel

@{
    ViewBag.Title = "Zresetuj hasło";
}
<div style="margin:60px">
    <h2>@ViewBag.Title.</h2>
    <div class="row">
        <div class="col-md-8">
            <section id="resetPasswordForm">
                @using (Html.BeginForm("ForgotPassword", "Account", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Podaj login lub adres email konta, którego hasło ma zostać zresetowane. </h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="wpisz login lub email" id="userNameOrEmailInput" name="userNameOrEmail">
                    </div>
                    <div class="formValidation" id="loginOrEmailValidationInfo">
                        To pole musi być uzupełnione.
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Wyślij" class="btn btn-default" onclick="return validateForgotPassword()" />
                        </div>
                    </div>
                    
                }
            </section>
        </div>
        
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    function validateForgotPassword() {
        if ($('#userNameOrEmailInput').val() == "") {
            document.getElementById("loginOrEmailValidationInfo").style.display = "block";
            return false;
        }
        else {
            document.getElementById("loginOrEmailValidationInfo").style.display = "none";
            return true;
        }
    }
</script>